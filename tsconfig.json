{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "noImplicitAny": false,
        "module": "es2015",
        "target": "es5",
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom",
        ],
        "jsxFactory": "React.createElement",
        "typeRoots": [
            "./typings"        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "paths": {
            "@app/common": ["src/common/index.ts"],
            "@app/common/*": ["src/common/*"],
            "@app/board/*": ["src/boards/Board/*"],
            "@app/task/*": ["src/boards/Task/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules"
    ]
}